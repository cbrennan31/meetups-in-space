<h1>Meetups</h1>

<ul>
  <% @meetups.each do |meetup| %>
    <li>
      <a href = "/meetups/<%= meetup.id %>">
        <%= meetup.name %>
      </a>
    </li>
  <% end %>
</ul>

<% if @current_user %>
  <a href="/meetups/new">Create your own meetup! (Please sign in first.)</a>
<% else %>
  <a href="/">Create your own meetup! (Please sign in first.)</a>
<% end %>
